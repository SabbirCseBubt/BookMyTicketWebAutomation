package Day_2;

public class Variables_Demo {

	public static void main(String[] args) {
		int a; //declration
		a=100; // assignmnet
		
		int b=100; // dec & assignment
		System.out.println(b);
		b=200;
		System.out.println(b);
		
		//approach 1
		
		/*
		 * int x=10;
		 * int y=20;
		 */
		
		//approach 2
		int x,y;
		x=100;
		y=200;
		
		

	}

}
